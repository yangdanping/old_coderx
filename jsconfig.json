{
  "compilerOptions": {
    // 路径解析(类似于webpack alias)
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    // 决定那些文件用jsconfig.json进行约束和解析,exclude则是排除
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
    "src/**/*.less"
  ]
}
